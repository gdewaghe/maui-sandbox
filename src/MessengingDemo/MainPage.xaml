<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MessengingDemo.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MessengingDemo.ViewModels">
    <ContentPage.BindingContext>
        <viewModels:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30,0"
                             Spacing="25"
                             VerticalOptions="Center">
            <Button Command="{Binding ShowDialogCommand}"
                    Text="Show dialog" />
            <Border Padding="20,20"
                    StrokeShape="RoundRectangle 8">
                <VerticalStackLayout Spacing="10">
                    <Label HorizontalOptions="Start"
                           Text="Base number" />
                    <Entry Placeholder="Enter base number..."
                           Text="{Binding BaseNumber}" />
                    <Label HorizontalOptions="Start"
                           Text="Factorial" />
                    <Label Text="{Binding Factorial}" />
                    <Button Command="{Binding ComputeFactorialCommand}"
                            HorizontalOptions="Center"
                            Text="Compute" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
