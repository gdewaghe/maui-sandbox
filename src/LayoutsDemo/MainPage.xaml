<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="LayoutsDemo.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout>
        <StackLayout Margin="20,35,20,25">
            <Label Text="Magins are set up to dictate the location" />
            <Label Text="of the StackLayout." />
            <Label Text="Padding and Spacing are often used too." />
        </StackLayout>

        <HorizontalStackLayout Margin="20">
            <Rectangle Fill="Red"
                       HeightRequest="30"
                       WidthRequest="30" />
            <Label FontSize="18"
                   Text="Red" />
        </HorizontalStackLayout>

        <VerticalStackLayout>
            <Label Text="Line 1." />
            <Label Text="Line 2 (below)." />
            <Label Text="Line 3 (below)." />
        </VerticalStackLayout>

        <Grid RowDefinitions="50, 50"
              ColumnDefinitions="Auto, *"
              Margin="20">
            <Label Text="Column 0, Row 0"
                   WidthRequest="200" />
            <Label Grid.Column="1"
                   Text="Column 1, Row 0" />
            <Label Grid.Row="1"
                   Text="Column 0, Row 1" />
            <Label Grid.Row="1"
                   Grid.Column="1"
                   Text="Column 1, Row 1" />
        </Grid>
    </VerticalStackLayout>

</ContentPage>
